<%- include('../partials/header') %>

<main>
  <section id="projetos" class="container">
    <h2 class="section-title">Meus Projetos</h2>

    <div class="grid">
      <% projetos.forEach(p => { %>
        <div class="card projeto <%= p.concluido ? 'concluido' : 'andamento' %>">
          <h3><%= p.titulo %></h3>
          <p><%= p.descricao %></p>
          <a href="<%= p.link %>" target="_blank" class="btn">Ver Projeto</a>

          <p class="status">
            Status: <%= p.concluido ? "Concluído" : "Em andamento" %>
          </p>

          <% if (!p.concluido) { %>
            <form action="/projetos/<%= p.id %>/concluir" method="POST">
              <button type="submit" class="btn">Marcar como concluído</button>
            </form>
          <% } %>

          <form action="/projetos/<%= p.id %>/deletar" method="POST">
            <button type="submit" class="btn delete">Excluir</button>
          </form>
        </div>
      <% }) %>
    </div>

  </section>
</main>

<%- include('../partials/footer') %>
